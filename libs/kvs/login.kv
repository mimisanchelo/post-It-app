LoginScreen:
    name: 'login'
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_y': .95}
            text_color: rgba(26,24,58,255)
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'welcome'

        Image:
            pos_hint: {'center_x': 0.5, 'center_y': .85}
            size_hint: 0.55, 0.55
            source: 'assets/images/logo-no-bg.png'

        MDLabel:
            text: 'Sign in to continue'
            font_size: '20sp'
            pos_hint: {'center_x': .5, 'center_y': .7}
            halign: 'center'
            color: app.light_black

        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {'center_x': .5, 'center_y': .58}
            MDTextField:
                id: email
                hint_text: 'Email'
                size_hint_x: .8
                line_color_focus: app.dark
                pos_hint: {'center_x': .5, 'center_y': .5}
                multiline: False
        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {'center_x': .5, 'center_y': .48}
            MDTextField:
                id: password
                hint_text: 'Password'
                size_hint_x: .8
                line_color_focus: app.dark
                pos_hint: {'center_x': .5, 'center_y': .5}
                multiline: False
                password: True

        MDRectangleFlatButton:
            text: 'Login'
            size_hint: 0.6, 0.08
            pos_hint: {'center_x': 0.5, 'center_y': 0.34}
            theme_text_color: "Custom"
            text_color: app.foggy
            md_bg_color: app.dark
            line_color: app.dark
            on_release:
                app.login_validation(email.text, password.text)
                root.manager.transition.direction = 'left'

        MDTextButton:
            text: 'Forgot Password?'
            pos_hint:{'center_x': 0.5, 'center_y': 0.25}
            font_size: '12sp'

        MDLabel:
            text: 'or'
            color: app.dark
            pos_hint:{'center_x': 0.5, 'center_y': 0.20}
            font_size: '13sp'
            halign: 'center'

        MDFloatLayout:
            md_bg_color: app.light_black
            size_hint: 0.3, 0.002
            pos_hint: {'center_x': .3, 'center_y': .20}

        MDFloatLayout:
            md_bg_color: app.light_black
            size_hint: 0.3, 0.002
            pos_hint: {'center_x': .7, 'center_y': .20}

        MDTextButton:
            font_size: '11sp'
            text: 'SignUp'
            size_hint: 0.6, 0.1
            color: app.light_black
            pos_hint: {'center_x': 0.72, 'center_y': 0.15}
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'signup'